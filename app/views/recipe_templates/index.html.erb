<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Ingredients
        </th>

        <th>
          Directions
        </th>

        <th>
          Country origin
        </th>

        <th>
          Name
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <!-- Display recipe.id start -->
        <td>
          <%= recipe.id %>
        </td>
        <!-- Display recipe.id end -->

        <!-- Display recipe.user_id start -->
        <td>
          <% if recipe.user.present? %>
            <a href="/users/<%= recipe.user.id %>">
              <%= recipe.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.user_id end -->

        <!-- Display recipe.cuisine_id start -->
        <td>
          <% if recipe.cuisine.present? %>
            <a href="/cuisines/<%= recipe.cuisine.id %>">
              <%= recipe.cuisine.cuisine %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.cuisine_id end -->

        <!-- Display recipe.ingredients start -->
        <td>
          <%= recipe.ingredients %>
        </td>
        <!-- Display recipe.ingredients end -->

        <!-- Display recipe.directions start -->
        <td>
          <%= recipe.directions %>
        </td>
        <!-- Display recipe.directions end -->

        <!-- Display recipe.country_origin start -->
        <td>
          <%= recipe.country_origin %>
        </td>
        <!-- Display recipe.country_origin end -->

        <!-- Display recipe.name start -->
        <td>
          <%= recipe.name %>
        </td>
        <!-- Display recipe.name end -->

        <!-- Display recipe.photo start -->
        <td>
          <%= recipe.photo %>
        </td>
        <!-- Display recipe.photo end -->

        <!-- Display recipe.created_at start -->
        <td>
          <%= time_ago_in_words(recipe.created_at) %> ago
        </td>
        <!-- Display recipe.created_at end -->

        <!-- Display recipe.updated_at start -->
        <td>
          <%= time_ago_in_words(recipe.updated_at) %> ago
        </td>
        <!-- Display recipe.updated_at end -->

        <td>
          <a href="/recipes/<%= recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recipes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
