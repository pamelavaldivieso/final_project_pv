<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipes
    </h1>

    <a href="/recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe
    </a>
  </div>
</div>

<!-- Ransack Code start -->

